<div class="folder-view">
  <p id="notice"><%= notice %></p>

  <% if can? :edit, @folder %>
    <div class="primary-actions">
      <%= link_to edit_folder_path(@folder), class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-pencil"></span> Edit folder
      <% end %>
     </div>
  <% end %>
  <h1><%= @folder.name %></h1>
  <span class="owner-label">Owner:</span> <span class="owner"><%= @folder.user %></span>

  <%= render 'tools' %>

  <div id="documents">
    <%= render partial: 'folder_item', collection: @folder.items, locals: { docs: @folder.documents } %>
  </div>
</div>
